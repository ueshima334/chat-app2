<div class="messages">
  <div class="messagetop">
    <div class="messagename">
      <%= message.user.name %>
    </div>
    <div class="messagedate">
      <%= l message.created_at %>

    </div>
  </div>
    <div class="messagecomment">
      <%= message.content %>
  </div>
  <%= image_tag message.image.variant(resize:'500x500'),class: "message-image" if message.image.attached?%>
</div>